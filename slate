# App aliases
alias browser 'Google Chrome'
alias editor  'Sublime Text 2'
alias finder  'Finder'
alias chat    'Adium'

# Abstract Positions
alias full          move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf      move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf     move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias topleft       corner top-left resize:screenSizeX/2;screenSizeY/2
alias topright      corner top-right resize:screenSizeX/2;screenSizeY/2
alias bottomleft    corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottomright   corner bottom-right resize:screenSizeX/2;screenSizeY/2
alias center        move screenOriginX+(screenSizeX-windowSizeX)/2;screenOriginY+(screenSizeY-windowSizeY)/2 windowSizeX;windowSizeY
alias screen75X     screenSizeX*.75
alias screen75Y     screenSizeY*.75
alias centerResize  move screenOriginX+(screenSizeX-${screen75X})/2;screenOriginY+(screenSizeY-${screen75Y})/2 ${screen75X};${screen75Y}

#
# hyper binding
#
alias hyper ctrl;alt

bind f1:${hyper} relaunch

bind 1:${hyper} ${topleft}
bind 2:${hyper} ${topright}
bind 3:${hyper} ${bottomleft}
bind 4:${hyper} ${bottomright}

bind up:${hyper}    push top bar-resize:screenSizeY/2
bind down:${hyper}  push bottom bar-resize:screenSizeY/2
bind left:${hyper}  ${lefthalf}
bind right:${hyper} ${righthalf}

bind f:${hyper} ${full}
bind c:${hyper} ${center}
bind v:${hyper} ${centerResize}
bind /:${hyper} undo
bind x:${hyper} throw next

# Focus Bindings
bind l:${hyper}    focus right
bind h:${hyper}    focus left
bind k:${hyper}    focus up
bind j:${hyper}    focus down

# nudge bindings
# these need work
bind right:shift;${hyper} resize +10% +0
bind left:shift;${hyper}  resize -10% +0    bottom-right
bind up:shift;${hyper}    resize +0   -10%
bind down:shift;${hyper}  resize +0   +10%

# numpad based commands (I might not like these)
bind pad1:${hyper} ${bottomleft}
bind pad2:${hyper} push bottom bar-resize:screenSizeY/2
bind pad3:${hyper} ${bottomright}
bind pad4:${hyper} ${lefthalf}
bind pad5:${hyper} ${full}
bind pad6:${hyper} ${righthalf}
bind pad7:${hyper} ${topleft}
bind pad8:${hyper} push top bar-resize:screenSizeY/2
bind pad9:${hyper} ${topright}


# hints, grids
bind s:${hyper} hint ASDFGHJKL
bind g:${hyper} grid
